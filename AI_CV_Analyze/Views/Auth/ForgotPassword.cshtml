@model AI_CV_Analyze.ViewModel.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/css/ForgotPassword.css" asp-append-version="true">

<div class="password-reset-container">
    <div class="password-reset-card">
        <div class="password-reset-hero">
            <div class="hero-content">
                <h2>Reset Your Password</h2>
                <p>We'll send you a link to reset your password</p>
            </div>
        </div>
        <div class="password-reset-form">
            <div class="form-header">
                <i class="fas fa-key"></i>
                <h1>Forgot Password?</h1>
                <p>Enter your email to receive reset instructions</p>
            </div>

            <form asp-action="ForgotPassword" method="post" class="reset-form">
                <div asp-validation-summary="ModelOnly" class="validation-errors"></div>

                <div class="form-group">
                    <div class="input-wrapper">
                        <i class="fas fa-envelope input-icon"></i>
                        <input asp-for="Email" class="form-input" placeholder="Your email address">
                    </div>
                    <span asp-validation-for="Email" class="error-message"></span>
                </div>

                <button type="submit" class="submit-button">
                    <i class="fas fa-paper-plane"></i> Send Reset Link
                </button>
            </form>

            @if (TempData["Info"] != null)
            {
                <div class="success-message">
                    <i class="fas fa-check-circle"></i> @TempData["Info"]
                </div>
            }

            <div class="back-to-login">
                <a asp-action="Login" class="login-link">
                    <i class="fas fa-arrow-left"></i> Back to Login
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const validationSummary = document.querySelector('.validation-errors');
            if (validationSummary) {
                const errorList = validationSummary.querySelector('ul');
                if (!errorList || errorList.children.length === 0) {
                    validationSummary.style.display = 'none';
                }
            }
        });
    </script>
}