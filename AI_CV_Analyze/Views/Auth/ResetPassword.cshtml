@model AI_CV_Analyze.ViewModel.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/css/ForgotPassword.css" asp-append-version="true">

<div class="password-reset-container">
    <div class="password-reset-card">
        <div class="password-reset-hero">
            <div class="hero-content">
                <h2>Reset Password</h2>
                <p>Enter the OTP code and your new password to reset your password</p>
            </div>
        </div>
        <div class="password-reset-form">
            <div class="form-header">
                <i class="fas fa-unlock-alt"></i>
                <h1>Reset Password</h1>
                <p>Please enter the OTP code and your new password</p>
            </div>

            <form asp-action="ResetPassword" method="post" class="reset-form">
                <div asp-validation-summary="ModelOnly" class="validation-errors"></div>
                <input type="hidden" asp-for="Email" />
                <div class="form-group">
                    <div class="input-wrapper">
                        <i class="fas fa-key input-icon"></i>
                        <input asp-for="OTP" class="form-input" placeholder="OTP Code">
                    </div>
                    <span asp-validation-for="OTP" class="error-message"></span>
                </div>
                <div class="form-group">
                    <div class="input-wrapper">
                        <i class="fas fa-lock input-icon"></i>
                        <input asp-for="NewPassword" class="form-input" placeholder="New Password" type="password">
                    </div>
                    <span asp-validation-for="NewPassword" class="error-message"></span>
                </div>
                <div class="form-group">
                    <div class="input-wrapper">
                        <i class="fas fa-lock input-icon"></i>
                        <input asp-for="ConfirmPassword" class="form-input" placeholder="Confirm Password" type="password">
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="error-message"></span>
                </div>
                <button type="submit" class="submit-button">
                    <i class="fas fa-sync-alt"></i> Reset Password
                </button>
            </form>

            @if (TempData["Success"] != null)
            {
                <div class="success-message">
                    <i class="fas fa-check-circle"></i> @TempData["Success"]
                </div>
            }

            <div class="back-to-login">
                <a asp-action="Login" class="login-link">
                    <i class="fas fa-arrow-left"></i> Back to Login
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const validationSummary = document.querySelector('.validation-errors');
            if (validationSummary) {
                const errorList = validationSummary.querySelector('ul');
                if (!errorList || errorList.children.length === 0) {
                    validationSummary.style.display = 'none';
                }
            }
        });
    </script>
} 