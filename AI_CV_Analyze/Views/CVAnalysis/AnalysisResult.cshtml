@model AI_CV_Analyze.Models.ResumeAnalysisResult
@using System.Text.Json

@{
    ViewData["Title"] = "K·∫øt Qu·∫£ Ph√¢n T√≠ch CV";
    Layout = "~/Views/Shared/_LayoutAnalysisResult.cshtml";
    var analysis = Model.Resume?.ResumeAnalysis;
    // S·ª≠ d·ª•ng ƒëi·ªÉm t·ª´ ViewBag n·∫øu c√≥ (∆∞u ti√™n cho c·∫£ guest)
    int layoutScore = ViewBag.LayoutScore ?? (analysis?.LayoutScore ?? 0);
    int skillScore = ViewBag.SkillScore ?? (analysis?.SkillScore ?? 0);
    int experienceScore = ViewBag.ExperienceScore ?? (analysis?.ExperienceScore ?? 0);
    int educationScore = ViewBag.EducationScore ?? (analysis?.EducationScore ?? 0);
    int keywordScore = ViewBag.KeywordScore ?? (analysis?.KeywordScore ?? 0);
    int formatScore = ViewBag.FormatScore ?? (analysis?.FormatScore ?? 0);
    int totalScore = ViewBag.TotalScore ?? (layoutScore + skillScore + experienceScore + educationScore + keywordScore + formatScore);
    bool hasScore = (layoutScore > 0 || skillScore > 0 || experienceScore > 0 || educationScore > 0 || keywordScore > 0 || formatScore > 0);
    // N·∫øu l√† kh√°ch, cho ph√©p JS render ƒëi·ªÉm t·∫°m th·ªùi
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header Section with floating animation -->
    <div class="text-center mb-8 animate-fade-in-up">
        @if (Model != null && !string.IsNullOrEmpty(Model.Content))
        {
            <div class="inline-flex items-center justify-center bg-gradient-to-r from-blue-500 to-blue-600 text-white px-6 py-2 rounded-full mb-4 shadow-md float-animation animate-fade-in-up animation-delay-200">
            <i class="fas fa-check-circle mr-2"></i>
            <span>Analysis complete</span>
        </div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2 animate-fade-in-up animation-delay-300">CV Analysis Results</h1>
            <p class="text-lg text-gray-600 max-w-3xl mx-auto animate-fade-in-up animation-delay-400">The AI system has analyzed your CV and provided detailed evaluations</p>

            <!-- File info cards with enhanced hover -->
            <div class="flex flex-wrap justify-center gap-3 mt-6 animate-fade-in-up animation-delay-500">
                <div class="bg-white px-4 py-2 rounded-lg shadow-sm border border-gray-100 flex items-center hover:shadow-md hover:border-blue-200 transition-all">
                <i class="fas fa-file-alt text-blue-500 mr-2"></i>
                <span class="text-sm font-medium text-gray-700 truncate max-w-xs">@Model.FileName</span>
            </div>
                <div class="bg-white px-4 py-2 rounded-lg shadow-sm border border-gray-100 flex items-center hover:shadow-md hover:border-blue-200 transition-all">
                <i class="fas fa-calendar-alt text-blue-500 mr-2"></i>
                <span class="text-sm font-medium text-gray-700" id="realtime-clock">@Model.AnalysisDate.ToString("dd/MM/yyyy HH:mm")</span>
            </div>
                <div class="bg-white px-4 py-2 rounded-lg shadow-sm border border-gray-100 flex items-center hover:shadow-md hover:border-blue-200 transition-all">
                <i class="fas fa-robot text-blue-500 mr-2"></i>
                <span class="text-sm font-medium text-gray-700">AI Engine 2.0</span>
            </div>
        </div>
        }
        else
        {
            <div class="inline-flex items-center justify-center bg-gradient-to-r from-yellow-500 to-yellow-600 text-white px-6 py-2 rounded-full mb-4 shadow-md pulse-animation">
                <i class="fas fa-exclamation-triangle mr-2"></i>
                <span>No CV Analysis Available</span>
            </div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2">CV Analysis Results</h1>
            <p class="text-lg text-gray-600 max-w-3xl mx-auto">Please upload a CV to get started with the analysis</p>

            <div class="mt-6">
                <a asp-controller="CVAnalysis" asp-action="Index" class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-all transform hover:-translate-y-0.5 hover:shadow-lg btn-hover-effect">
                    <i class="fas fa-upload mr-2 transition-transform duration-300 group-hover:translate-y-0.5"></i>
                    Upload CV for Analysis
                </a>
            </div>
        }
    </div>

    <!-- 3-COLUMN GRID LAYOUT -->
    <div class="grid grid-cols-1 md:grid-cols-12 gap-4 animate-fade-in-up animation-delay-600">
        <!-- LEFT COLUMN: CV Scoring + Job Recommendation -->
        <div class="space-y-6 order-1 md:order-1 md:col-span-3 animate-fade-in-left animation-delay-700">
            <!-- Enhanced CV Scoring Block with Advanced UI -->
            <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden mb-6 hover:shadow-xl transition-all duration-300 animate-fade-in-up animation-delay-100" id="cv-score-block">
                <!-- Enhanced Header with Gradient Background -->
                <div class="bg-gradient-to-br from-blue-500 via-purple-500 to-indigo-600 px-4 py-4 border-b border-blue-400 relative overflow-hidden">
                    <!-- Animated background pattern -->
                    <div class="absolute inset-0 opacity-10">
                        <div class="absolute top-0 left-0 w-16 h-16 bg-white rounded-full transform -translate-x-8 -translate-y-8"></div>
                        <div class="absolute top-8 right-8 w-12 h-12 bg-white rounded-full"></div>
                        <div class="absolute bottom-0 left-1/2 w-8 h-8 bg-white rounded-full transform -translate-x-4 translate-y-4"></div>
                </div>
                    
                    <div class="relative flex items-center justify-between">
                        <div class="flex items-center">
                            <div class="relative">
                                <div class="w-10 h-10 bg-white bg-opacity-20 rounded-lg flex items-center justify-center mr-3">
                                    <i class="fas fa-star text-white text-lg"></i>
                                </div>
                                <div class="absolute -top-1 -right-1 w-5 h-5 bg-yellow-400 rounded-full flex items-center justify-center">
                                    <i class="fas fa-sparkles text-white text-xs"></i>
                                </div>
                            </div>
                            <div>
                                <h2 class="text-lg font-bold text-white mb-0.5">CV Scoring (AI)</h2>
                                <p class="text-blue-100 text-xs">Intelligent evaluation system</p>
                            </div>
                        </div>
                        <div class="hidden sm:block">
                            <div class="w-7 h-7 bg-white bg-opacity-20 rounded-full flex items-center justify-center">
                                <i class="fas fa-robot text-white text-xs"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="p-6">
                    <!-- Hidden input for CV content -->
                    <input type="hidden" name="Content" value="@(Model.Content ?? (ViewBag.CVContent ?? ""))" />
                    
                    <!-- Enhanced Scoring Button -->
                    <button id="btnScoreCV" class="group relative w-full flex justify-center items-center px-4 py-3 mb-4 border border-transparent rounded-lg shadow-md text-sm font-bold text-white bg-gradient-to-r from-blue-500 via-purple-500 to-indigo-600 hover:from-blue-600 hover:via-purple-600 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-blue-300 focus:ring-opacity-50 transition-all duration-300 transform hover:-translate-y-0.5 hover:shadow-lg btn-hover-effect" data-resumeid="@Model.ResumeId" style="display: @(hasScore ? "none" : "block")">
                        <div class="absolute inset-0 bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-700 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                        <span class="relative flex items-center">
                            <i class="fas fa-magic mr-2 text-base group-hover:animate-spin transition-transform duration-300"></i> 
                            Start AI Scoring
                        </span>
                    </button>

                    <!-- Error State - Moved right after button -->
                    <div id="score-error" style="display:none" class="mb-4">
                        <!-- Error content will be dynamically inserted by JavaScript -->
                    </div>

                    <!-- Enhanced Score Table with Progress Bars -->
                    <div id="cv-score-table" style="display: @(hasScore ? "block" : "none")" class="space-y-3">
                        <!-- Layout and Presentation -->
                        <div class="score-item bg-gradient-to-r from-blue-50 to-indigo-50 rounded-lg p-3 border border-blue-100 hover:border-blue-200 transition-all duration-300">
                            <div class="flex items-center justify-between mb-2">
                                <div class="flex items-center">
                                    <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg flex items-center justify-center mr-3">
                                        <span class="text-sm" style="font-size: 16px;">üé®</span>
                    </div>
                                    <span class="font-medium text-gray-800 text-sm">Layout</span>
                        </div>
                                <span class="font-bold text-blue-600 text-base" id="score-layout">@layoutScore / 10</span>
                    </div>
                            <div class="w-full bg-gray-200 rounded-full h-1.5 overflow-hidden">
                                <div class="bg-gradient-to-r from-blue-500 to-blue-600 h-full rounded-full transition-all duration-1000" style="width: @(layoutScore * 10)%"></div>
                            </div>
                        </div>

                        <!-- Skills -->
                        <div class="score-item bg-gradient-to-r from-green-50 to-emerald-50 rounded-lg p-3 border border-green-100 hover:border-green-200 transition-all duration-300">
                            <div class="flex items-center justify-between mb-2">
                                <div class="flex items-center">
                                    <div class="w-8 h-8 bg-gradient-to-br from-green-500 to-green-600 rounded-lg flex items-center justify-center mr-3">
                                        <span class="text-sm" style="font-size: 16px;">üîß</span>
                                    </div>
                                    <span class="font-medium text-gray-800 text-sm">Skills</span>
                                </div>
                                <span class="font-bold text-green-600 text-base" id="score-skill">@skillScore / 10</span>
                            </div>
                            <div class="w-full bg-gray-200 rounded-full h-1.5 overflow-hidden">
                                <div class="bg-gradient-to-r from-green-500 to-green-600 h-full rounded-full transition-all duration-1000" style="width: @(skillScore * 10)%"></div>
                            </div>
                        </div>

                        <!-- Experience/Project -->
                        <div class="score-item bg-gradient-to-r from-purple-50 to-violet-50 rounded-lg p-3 border border-purple-100 hover:border-purple-200 transition-all duration-300">
                            <div class="flex items-center justify-between mb-2">
                                <div class="flex items-center">
                                    <div class="w-8 h-8 bg-gradient-to-br from-purple-500 to-purple-600 rounded-lg flex items-center justify-center mr-3">
                                        <span class="text-sm" style="font-size: 16px;">üíº</span>
                                    </div>
                                    <span class="font-medium text-gray-800 text-sm">Experience</span>
                                </div>
                                <span class="font-bold text-purple-600 text-base" id="score-experience">@experienceScore / 10</span>
                            </div>
                            <div class="w-full bg-gray-200 rounded-full h-1.5 overflow-hidden">
                                <div class="bg-gradient-to-r from-purple-500 to-purple-600 h-full rounded-full transition-all duration-1000" style="width: @(experienceScore * 10)%"></div>
                            </div>
                        </div>

                        <!-- Education -->
                        <div class="score-item bg-gradient-to-r from-orange-50 to-amber-50 rounded-lg p-3 border border-orange-100 hover:border-orange-200 transition-all duration-300">
                            <div class="flex items-center justify-between mb-2">
                                <div class="flex items-center">
                                    <div class="w-8 h-8 bg-gradient-to-br from-orange-500 to-orange-600 rounded-lg flex items-center justify-center mr-3">
                                        <span class="text-sm" style="font-size: 16px;">üéì</span>
                                    </div>
                                    <span class="font-medium text-gray-800 text-sm">Education</span>
                                </div>
                                <span class="font-bold text-orange-600 text-base" id="score-education">@educationScore / 10</span>
                            </div>
                            <div class="w-full bg-gray-200 rounded-full h-1.5 overflow-hidden">
                                <div class="bg-gradient-to-r from-orange-500 to-orange-600 h-full rounded-full transition-all duration-1000" style="width: @(educationScore * 10)%"></div>
                            </div>
                        </div>

                        <!-- Keywords -->
                        <div class="score-item bg-gradient-to-r from-pink-50 to-rose-50 rounded-lg p-3 border border-pink-100 hover:border-pink-200 transition-all duration-300">
                            <div class="flex items-center justify-between mb-2">
                                <div class="flex items-center">
                                    <div class="w-8 h-8 bg-gradient-to-br from-pink-500 to-pink-600 rounded-lg flex items-center justify-center mr-3">
                                        <span class="text-sm" style="font-size: 16px;">üîë</span>
                                    </div>
                                    <span class="font-medium text-gray-800 text-sm">Keywords</span>
                                </div>
                                <span class="font-bold text-pink-600 text-base" id="score-keyword">@keywordScore / 10</span>
                            </div>
                            <div class="w-full bg-gray-200 rounded-full h-1.5 overflow-hidden">
                                <div class="bg-gradient-to-r from-pink-500 to-pink-600 h-full rounded-full transition-all duration-1000" style="width: @(keywordScore * 10)%"></div>
                            </div>
                        </div>

                        <!-- Format -->
                        <div class="score-item bg-gradient-to-br from-teal-50 to-cyan-50 rounded-lg p-3 border border-teal-100 hover:border-teal-200 transition-all duration-300">
                            <div class="flex items-center justify-between mb-2">
                                <div class="flex items-center">
                                    <div class="w-8 h-8 bg-gradient-to-br from-teal-500 to-teal-600 rounded-lg flex items-center justify-center mr-3">
                                        <span class="text-sm" style="font-size: 16px;">üìÑ</span>
                                    </div>
                                    <span class="font-medium text-gray-800 text-sm">Format</span>
                                </div>
                                <span class="font-bold text-teal-600 text-base" id="score-format">@formatScore / 10</span>
                            </div>
                            <div class="w-full bg-gray-200 rounded-full h-1.5 overflow-hidden">
                                <div class="bg-gradient-to-r from-teal-500 to-teal-600 h-full rounded-full transition-all duration-1000" style="width: @(formatScore * 10)%"></div>
                            </div>
                        </div>

                        <!-- Total Score - Compact Design -->
                        <div class="score-item bg-gradient-to-br from-indigo-50 to-purple-50 rounded-xl p-4 border-2 border-indigo-200 hover:border-indigo-300 transition-all duration-300">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center">
                                    <div class="w-8 h-8 bg-gradient-to-br from-indigo-500 to-purple-500 rounded-lg flex items-center justify-center mr-3">
                                        <span class="text-white text-sm">üèÜ</span>
                                    </div>
                                    <span class="font-bold text-gray-800">Total Score</span>
                                </div>
                                <div class="text-right">
                                    <div class="font-bold text-indigo-600 text-xl" id="score-total">@totalScore / 60</div>
                                    <div class="text-xs text-gray-500">
                                        @{
                                            var scorePercentage = totalScore * 100 / 60;
                                            var scoreLevel = scorePercentage >= 80 ? "Excellent" : 
                                                            scorePercentage >= 60 ? "Good" : 
                                                            scorePercentage >= 40 ? "Average" : "Needs Improvement";
                                        }
                                        @scoreLevel
                                    </div>
                                </div>
                            </div>
                            <div class="w-full bg-gray-200 rounded-full h-2 mt-3 overflow-hidden">
                                <div class="bg-gradient-to-r from-indigo-500 to-purple-500 h-full rounded-full transition-all duration-1000" style="width: @(totalScore * 100 / 60)%"></div>
                            </div>
                        </div>
                    </div>

                    <!-- Enhanced Loading State -->
                    <div id="score-loading" style="display:none" class="text-center py-6">
                        <div class="relative w-16 h-16 mx-auto mb-4">
                            <div class="absolute inset-0 bg-gradient-to-br from-blue-400 to-indigo-500 rounded-full animate-pulse"></div>
                            <div class="absolute inset-2 bg-white rounded-full flex items-center justify-center">
                                <div class="w-8 h-8 border-4 border-blue-600 border-t-transparent rounded-full animate-spin"></div>
                            </div>
                        </div>
                        <h3 class="text-lg font-semibold text-gray-800 mb-2">AI is analyzing your CV...</h3>
                        <p class="text-gray-600 text-sm">Evaluating all criteria with advanced algorithms</p>
                    </div>
                </div>
            </div>

            <!-- Advanced Job Recommendation Block -->
            <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden hover:shadow-xl transition-all duration-300 animate-fade-in-up animation-delay-200">
                <div class="bg-gradient-to-r from-blue-500 to-indigo-600 px-6 py-5 border-b border-blue-400">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <div>
                                <h2 class="text-xl font-bold text-white">Suitable Jobs</h2>
                                <p class="text-blue-100 text-sm">AI-powered job matching based on your CV</p>
                            </div>
                        </div>
                        <div class="hidden sm:block">
                            <div class="w-8 h-8 bg-white bg-opacity-20 rounded-full flex items-center justify-center">
                                <i class="fas fa-robot text-white text-sm"></i>
                            </div>
                        </div>
                    </div>
                </div>
              
                <div class="p-6">
                    <!-- Hidden fields to pass model data to JavaScript -->
                    <input type="hidden" id="cvSkills" value="@Model.Skills" />
                    <input type="hidden" id="cvExperience" value="@Model.Experience" />
                    <input type="hidden" id="cvProject" value="@Model.Project" />
                    <!-- Hidden field for job recommendations from session -->
                    @if (ViewBag.JobRecommendations != null)
                    {
                        <input type="hidden" id="jobRecommendationsFromSession" value="@Html.Raw(Json.Serialize(ViewBag.JobRecommendations))" />
                    }
                    
                    <!-- Initial State -->
                    @if (ViewBag.JobRecommendations == null)
                    {
                        <div id="jobInitialState" class="text-center py-8">
                            <div class="mb-8">
                                <div class="relative w-20 h-20 mx-auto mb-6">
                                    <div class="absolute inset-0 bg-gradient-to-br from-blue-400 to-indigo-500 rounded-full animate-pulse"></div>
                                    <div class="absolute inset-2 bg-white rounded-full flex items-center justify-center">
                                        <i class="fas fa-search text-blue-600 text-2xl"></i>
                                    </div>
                                    <div class="absolute -top-1 -right-1 w-6 h-6 bg-green-500 rounded-full flex items-center justify-center">
                                        <i class="fas fa-sparkles text-white text-xs"></i>
                                    </div>
                                </div>
                                <h3 class="text-xl font-bold text-gray-800 mb-3">Discover Your Perfect Job Match</h3>
                                <p class="text-gray-600 mb-6 max-w-sm mx-auto">Our AI will analyze your CV and find the best job opportunities that match your skills and experience</p>
                                <!-- Feature highlights - Compact Vertical Version -->
                                <div class="flex flex-col gap-3 mb-6">
                                    <div class="feature-card flex items-start p-3 bg-gradient-to-br from-blue-50 to-blue-100 rounded-lg border border-blue-200">
                                        <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg flex items-center justify-center mr-3 flex-shrink-0">
                                            <i class="fas fa-chart-line text-white text-xs"></i>
                                        </div>
                                        <div>
                                            <p class="text-xs font-semibold text-gray-700">Smart Matching</p>
                                            <p class="text-xs text-gray-500">AI-powered job matching</p>
                                        </div>
                                    </div>
                                    <div class="feature-card flex items-start p-3 bg-gradient-to-br from-indigo-50 to-indigo-100 rounded-lg border border-indigo-200">
                                        <div class="w-8 h-8 bg-gradient-to-br from-indigo-500 to-indigo-600 rounded-lg flex items-center justify-center mr-3 flex-shrink-0">
                                            <i class="fas fa-lightbulb text-white text-xs"></i>
                                        </div>
                                        <div>
                                            <p class="text-xs font-semibold text-gray-700">Skill Analysis</p>
                                            <p class="text-xs text-gray-500">Deep skill assessment</p>
                                        </div>
                                    </div>
                                    <div class="feature-card flex items-start p-3 bg-gradient-to-br from-purple-50 to-purple-100 rounded-lg border border-purple-200">
                                        <div class="w-8 h-8 bg-gradient-to-br from-purple-500 to-purple-600 rounded-lg flex items-center justify-center mr-3 flex-shrink-0">
                                            <i class="fas fa-rocket text-white text-xs"></i>
                                        </div>
                                        <div>
                                            <p class="text-xs font-semibold text-gray-700">Career Growth</p>
                                            <p class="text-xs text-gray-500">Path to success</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button id="btnJobRecommend" type="button" class="group relative w-auto max-w-md mx-auto flex justify-center items-center px-6 py-3 border border-transparent rounded-lg shadow-md text-base font-medium text-white bg-gradient-to-r from-blue-500 to-indigo-600 hover:from-blue-600 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-blue-300 transition-all duration-300 transform hover:-translate-y-0.5 hover:shadow-lg btn-hover-effect">
                                <div class="absolute inset-0 bg-gradient-to-r from-blue-600 to-indigo-700 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                                <span class="relative flex items-center">
                                    <i class="fas fa-magic mr-2 text-sm group-hover:animate-spin"></i> 
                                    Get Smart Recommendations
                                </span>
                            </button>
                        </div>
                    }
                    else
                    {
                    }

                    <!-- Loading State -->
                    <div id="jobLoadingState" class="text-center py-8" style="display: none;">
                        <div class="mb-6">
                            <div class="relative w-16 h-16 mx-auto mb-4">
                                <div class="absolute inset-0 bg-gradient-to-br from-blue-400 to-indigo-500 rounded-full animate-pulse"></div>
                                <div class="absolute inset-2 bg-white rounded-full flex items-center justify-center">
                                    <div class="w-8 h-8 border-4 border-blue-600 border-t-transparent rounded-full animate-spin"></div>
                                </div>
                            </div>
                            <h3 class="text-lg font-semibold text-gray-800 mb-2">Analyzing Your Profile</h3>
                            <p class="text-gray-600 mb-4">Our AI is finding the perfect job matches for you...</p>
                            
                            <!-- Progress steps -->
                            <div class="space-y-2 mb-6">
                                <div class="flex items-center text-sm text-gray-600">
                                    <div class="w-2 h-2 bg-green-500 rounded-full mr-3"></div>
                                    <span>Analyzing skills and experience</span>
                                </div>
                                <div class="flex items-center text-sm text-gray-600">
                                    <div class="w-2 h-2 bg-blue-500 rounded-full mr-3 animate-pulse"></div>
                                    <span>Matching with job market</span>
                                </div>
                                <div class="flex items-center text-sm text-gray-400">
                                    <div class="w-2 h-2 bg-gray-300 rounded-full mr-3"></div>
                                    <span>Generating recommendations</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Results State -->
                    <div id="jobRecommendResult" class="space-y-6" style="display: none;">
                        <!-- Results will be populated by JavaScript -->
                    </div>

                    <!-- Results State from Session (when page loads with existing data) -->
                    @if (ViewBag.JobRecommendations != null)
                    {
                        <div id="jobRecommendResultFromSession" class="space-y-6">
                            @{
                                var jobResult = ViewBag.JobRecommendations as AI_CV_Analyze.Models.JobSuggestionResult;
                                if (jobResult != null && !string.IsNullOrEmpty(jobResult.RecommendedJob))
                                {
                                    <div class="space-y-6">
                                        <div class="text-center mb-6">
                                            <div class="w-16 h-16 mx-auto mb-4 bg-gradient-to-br from-green-400 to-green-600 rounded-full flex items-center justify-center">
                                                <i class="fas fa-check text-white text-2xl"></i>
                                            </div>
                                            <h3 class="text-xl font-bold text-gray-800 mb-2">Perfect Match Found!</h3>
                                            <p class="text-gray-600">Based on your skills and experience, we recommend:</p>
                                        </div>

                                        <!-- Job Card -->
                                        <div class="bg-gradient-to-br from-blue-50 to-indigo-50 border border-blue-200 rounded-xl p-6 hover:shadow-lg transition-all duration-300">
