<script>
// Enhanced test script ƒë·ªÉ ki·ªÉm tra ch·ª©c nƒÉng View Details
document.addEventListener('DOMContentLoaded', function() {
    console.log('AnalysisResult page loaded - Enhanced test');
    
    // Ki·ªÉm tra xem c√≥ n√∫t View Details kh√¥ng
    const viewDetailsButtons = document.querySelectorAll('.show-more-btn');
    console.log('Found', viewDetailsButtons.length, 'View Details buttons');
    
    // Ki·ªÉm tra xem c√≥ modal kh√¥ng
    const modal = document.getElementById('contentDetailModal');
    console.log('Modal found:', !!modal);
    
    // Ki·ªÉm tra xem c√≥ content cards kh√¥ng
    const contentCards = document.querySelectorAll('.content-card');
    console.log('Found', contentCards.length, 'content cards');
    
    // Enhanced test click v√†o n√∫t View Details
    viewDetailsButtons.forEach((btn, index) => {
        console.log('Button', index, 'data-title:', btn.closest('.content-card')?.getAttribute('data-title'));
        console.log('Button', index, 'has data-full-content:', !!btn.closest('.content-card')?.getAttribute('data-full-content'));
        
        // Th√™m enhanced test click event
        btn.addEventListener('click', function(e) {
            console.log('Enhanced test click on button', index);
            e.preventDefault();
            e.stopPropagation();
            
            const card = this.closest('.content-card');
            const title = card?.getAttribute('data-title');
            const content = card?.getAttribute('data-full-content');
            
            console.log('Enhanced Test - Title:', title);
            console.log('Enhanced Test - Content length:', content?.length);
            
            if (title && content) {
                // Enhanced test hi·ªÉn th·ªã modal
                const modal = document.getElementById('contentDetailModal');
                const modalTitle = document.getElementById('modalTitle');
                const modalContent = document.getElementById('modalContent');
                
                if (modal && modalTitle && modalContent) {
                    modalTitle.textContent = title;
                    modalContent.innerHTML = content;
                    modal.classList.remove('hidden');
                    modal.style.display = 'flex';
                    console.log('Enhanced test modal shown successfully');
                    
                    // Th√™m class show sau m·ªôt ch√∫t ƒë·ªÉ animation
                    setTimeout(() => {
                        modal.classList.add('show');
                    }, 10);
                } else {
                    console.error('Modal elements not found in enhanced test');
                }
            } else {
                console.error('Missing title or content in enhanced test');
            }
        });
    });
    
    // Enhanced test ƒë√≥ng modal
    const closeBtn = document.getElementById('closeContentModal');
    if (closeBtn) {
        closeBtn.addEventListener('click', function() {
            const modal = document.getElementById('contentDetailModal');
            if (modal) {
                modal.classList.remove('show');
                setTimeout(() => {
                    modal.style.display = 'none';
                    modal.classList.add('hidden');
                }, 300);
                console.log('Enhanced test modal closed successfully');
            }
        });
    }
    
    // Test click b√™n ngo√†i modal ƒë·ªÉ ƒë√≥ng
    document.addEventListener('click', function(e) {
        const modal = document.getElementById('contentDetailModal');
        if (modal && !modal.classList.contains('hidden') && e.target === modal) {
            modal.classList.remove('show');
            setTimeout(() => {
                modal.style.display = 'none';
                modal.classList.add('hidden');
            }, 300);
            console.log('Modal closed by clicking outside');
        }
    });
    
    // Test ph√≠m Escape ƒë·ªÉ ƒë√≥ng modal
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            const modal = document.getElementById('contentDetailModal');
            if (modal && !modal.classList.contains('hidden')) {
                modal.classList.remove('show');
                setTimeout(() => {
                    modal.style.display = 'none';
                    modal.classList.add('hidden');
                }, 300);
                console.log('Modal closed by Escape key');
            }
        }
    });
});
</script>
