@{
    ViewBag.Title = "Đề xuất chỉnh sửa CV từ AI";
}
<h2>Đề xuất chỉnh sửa CV từ AI</h2>
<a href="@Url.Action("AnalysisResult", "CVAnalysis")" class="btn btn-secondary mb-3">
    <i class="fas fa-arrow-left me-1"></i>Quay lại Kết quả phân tích CV
</a>
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-warning">@ViewBag.ErrorMessage</div>
}
<div class="card mt-3">
    <div class="card-body">
        <pre style="white-space: pre-wrap;">@ViewBag.Suggestions</pre>
    </div>
</div>
<a href="@Url.Action("Index", "Home")" class="btn btn-secondary mt-3">Về trang chủ</a> 